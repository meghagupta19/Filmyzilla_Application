<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Affirmations" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/p</item>
        <item name="colorPrimaryVariant">@color/p_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/s</item>
        <item name="colorSecondaryVariant">@color/s_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="line">
        <!--<item name="background"></item>-->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/bubblegum_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Affirmations.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Affirmations.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Affirmations.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>